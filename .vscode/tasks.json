{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "alembic generate script",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m alembic revision --autogenerate -m \"${input:message}\" ",
            "windows": {
                "command": "$env:PYTHONPATH;${command:python.interpreterPath} -m alembic revision --autogenerate -m ${input:message}  "
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "alembic commit change",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m alembic upgrade head",
            "windows": {
                "command": "$env:PYTHONPATH;${command:python.interpreterPath}  -m alembic upgrade head"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "build testspace pakage",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m build",
            "windows": {
                "command": "${command:python.interpreterPath} -m build"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": [
                "freeze testspace pakage"
            ],
            "problemMatcher": []
        },
        {
            "label": "upgrade all pakage",
            "type": "shell",
            "command":"${command:python.interpreterPath} -m pip freeze | %{$_.split('==')[0]} | %{pip install --upgrade $_}",
            "windows": {
                "command": "${command:python.interpreterPath} -m pip freeze | %{$_.split('==')[0]} | %{pip install --upgrade $_}",
            },
            "linux": {
                "command": "${command:python.interpreterPath} -m pip list --outdated --format=freeze | grep -v '^\\-e' | cut -d = -f 1 | xargs -n1 pip3 install -U"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": [
                
            ],
            "problemMatcher": [],
        },
        {
            "label": "freeze testspace pakage",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip freeze > requirements.txt",
            "windows": {
                "command": "${command:python.interpreterPath} -m pip freeze > requirements.txt"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "start testspace server",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m testspace",
            "windows": {
                "command": "${command:python.interpreterPath} -m testspace"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "message",
            "description": "message:",
            "default": "Hello",
            "type": "promptString"
        },
    ]
}