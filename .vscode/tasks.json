{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "alembic generate script",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m alembic revision --autogenerate -m \"${input:message}\" ",
            "windows": {
                "command": "$env:PYTHONPATH;${command:python.interpreterPath} -m alembic revision --autogenerate -m ${input:message}  "
            },
            "options": {
                "cwd": "${workspaceFolder}",
                // "PYTHONPATH": "${workspaceFolder}\\src\\testspace;${workspaceFolder}\\tests;"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "alembic commit change",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m alembic upgrade head",
            "windows": {
                "command": "$env:PYTHONPATH;${command:python.interpreterPath}  -m alembic upgrade head"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                // "PYTHONPATH": "${workspaceFolder}\\src\\testspace;${workspaceFolder}\\tests;"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "build python pakage",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m build",
            "windows": {
                "command": "${command:python.interpreterPath} -m build"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "start testspace server",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m testspace",
            "windows": {
                "command": "${command:python.interpreterPath} -m testspace"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "message",
            "description": "message:",
            "default": "Hello",
            "type": "promptString"
        },
    ]
}